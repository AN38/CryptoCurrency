<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/currrency_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:layout_width="50dp"
        tools:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/currency_logo"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/currrency_logo"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="btc"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_symbol"
        app:layout_constraintStart_toEndOf="@+id/currrency_logo"
        android:textSize="14sp"
        tools:text="bitcoin"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_market_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:layout_margin="10dp"
        tools:text="Market Cap: $134,089,222,555"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_market_cap"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:layout_margin="10dp"
        tools:text="Price: $7404,47"/>

</androidx.constraintlayout.widget.ConstraintLayout>